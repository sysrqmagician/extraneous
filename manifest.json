{
  "manifest_version": 2,
  "name": "Extraneous",
  "version": "1.1",
  "description": "Adds bloat to Invidious.",
  "permissions": ["storage", "*://inv.nadeko.net/*"],
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content.js"]
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false,
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extraneous@sysrqmagician.github.io"
    }
  }
}
